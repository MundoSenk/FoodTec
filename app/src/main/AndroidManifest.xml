<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Foodtec"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.SignupFoodterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".ui.PedidosActivity"
            android:exported="false" />
        <activity
            android:name=".ui.VerifyActivity"
            android:exported="false" />
        <activity
            android:name=".ui.DetailsActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.HomeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.PasswordResetActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- ACTIVITY QUE SE ABRE DESDE EL CORREO -->
        <activity
            android:name=".ui.NewPasswordActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">

            <!-- DEEP LINK VERIFICADO -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- URL REAL QUE VIENE EN EL CORREO -->
                <data
                    android:host="senk.host"
                    android:pathPrefix="/reset_password"
                    android:scheme="https" />
            </intent-filter>

            <!-- OPCIONAL: SCHEME PROPIO foodtec://reset_password/... -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="reset_password"
                    android:scheme="foodtec" />
            </intent-filter>
        </activity>
    </application>

</manifest>