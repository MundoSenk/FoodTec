<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foodtec_naranja"
    tools:context=".ui.SearchActivity"> <View
    android:id="@+id/viewTopSection"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/shape_top_blue_with_pattern"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHeight_percent="0.25" /> <ImageButton
    android:id="@+id/btnRegresarSearch"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@android:drawable/ic_menu_close_clear_cancel"
    app:tint="@color/white"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:elevation="12dp"/>

    <LinearLayout
        android:id="@+id/llCardContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@drawable/shape_home_card"
        android:elevation="8dp"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <EditText
                android:id="@+id/etBuscadorReal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="¿De qué tiene antojo hoy?"
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:background="@drawable/shape_input_grey"
                android:padding="16dp"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="12dp"
                android:layout_marginBottom="24dp"
                android:inputType="text"
                android:imeOptions="actionSearch"/> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultados"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="@font/lilita_one_regular"
            android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvResultadosBusqueda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <TextView
                android:id="@+id/tvNoResultados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No se encontraron productos."
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="32dp"/>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavViewSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>