<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="#F0F8FF"> <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAvatarPub"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar_defaut"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/foodtec_azul"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvUsuarioPub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harold Reno"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_alternates_semibold"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvFechaPub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hace 2 horas"
                    android:textSize="10sp"
                    android:textColor="@color/dark_grey"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTipoPub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERDIDO"
                android:fontFamily="@font/lilita_one_regular"
                android:textColor="@color/white"
                android:background="@drawable/shape_tab_selected"
                android:backgroundTint="@color/foodtec_azul"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"/>


            <ImageButton
                android:id="@+id/btnBorrarPub"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#F44336"
                android:visibility="gone"
                android:contentDescription="Borrar publicación"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTituloPub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mochila Negra Nike"
                android:fontFamily="@font/lilita_one_regular"
                android:textColor="@color/foodtec_azul"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvDescPub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La dejé en las bancas del Edificio B. Tiene un llavero de Goku."
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/ivFotoPub"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                android:background="@drawable/shape_input_grey"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnContactar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡LO TENGO! / ES MÍO (Contactar)"
                android:fontFamily="@font/lilita_one_regular"
                android:background="@drawable/shape_tab_selected"
                app:backgroundTint="#25D366"
                android:textColor="@color/white"
                app:icon="@android:drawable/sym_action_chat"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>