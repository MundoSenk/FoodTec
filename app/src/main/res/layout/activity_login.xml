<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foodtec_naranja"
    tools:context=".ui.LoginActivity">

    <View
        android:id="@+id/viewTopSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_top_blue_with_pattern"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.35" />


    <ImageView
        android:id="@+id/imgLogoFlotante"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:elevation="10dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/viewTopSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewTopSection"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_white_card"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTopSection"
        android:layout_marginTop="-80dp"
        app:layout_constraintHeight_percent="0.6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/shape_tab_container"
                app:tabIndicatorAnimationMode="elastic"
                app:tabIndicator="@drawable/shape_tab_selected"
                app:tabIndicatorColor="@null"
                app:tabIndicatorGravity="stretch"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/black"
                app:tabTextAppearance="@style/MyTabTextAppearance">

                <com.google.android.material.tabs.TabItem
                    android:text="Inicio Sesion"/>

                <com.google.android.material.tabs.TabItem
                    android:text="Registrarse" />

            </com.google.android.material.tabs.TabLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/lilita_one_regular"/>

            <EditText
                android:id="@+id/etUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escribe tu usuario"
                android:inputType="text"
                android:layout_marginBottom="16dp"
                android:background="@drawable/shape_input_grey"
                android:padding="16dp"
                android:elevation="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/lilita_one_regular"/>

            <EditText
                android:id="@+id/etContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escribe tu contraseña"
                android:inputType="textPassword"
                android:layout_marginBottom="16dp"
                android:background="@drawable/shape_input_grey"
                android:padding="16dp"
                android:elevation="2dp"/>

            <TextView
                android:id="@+id/tvOlvideContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Olvidaste tu contraseña?"
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:textColor="@color/foodtec_naranja"  android:gravity="end"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="8dp"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/btnIniciarSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesion"
                android:fontFamily="@font/lilita_one_regular"
                android:layout_marginTop="24dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txRegistrateAqui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Aún no tienes cuenta? Registrate aqui"
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:layout_marginTop="32dp"/>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todos los derechos @Senk"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/lilita_one_regular"/>

</androidx.constraintlayout.widget.ConstraintLayout>