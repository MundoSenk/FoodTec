<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@android:drawable/sym_action_chat"
            app:tint="@color/foodtec_azul"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¡Conecta tu WhatsApp!"
            android:fontFamily="@font/lilita_one_regular"
            android:textSize="24sp"
            android:textColor="@color/foodtec_azul"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Para entrar a Objetos Perdidos, necesitamos un medio de contacto."
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/dark_grey"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/etWhatsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="55 1234 5678"
            android:inputType="phone"
            android:background="@drawable/shape_input_grey"
            android:padding="16dp"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/lilita_one_regular"
            android:maxLength="10"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnGuardarWhats"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="GUARDAR Y ENTRAR"
            android:fontFamily="@font/lilita_one_regular"
            android:textSize="18sp"
            android:background="@drawable/shape_tab_selected"
            app:backgroundTint="@color/foodtec_azul"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelarWhats"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="CANCELAR"
            android:textColor="@color/foodtec_azul"
            android:fontFamily="@font/lilita_one_regular"
            android:textSize="18sp"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/foodtec_azul"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>