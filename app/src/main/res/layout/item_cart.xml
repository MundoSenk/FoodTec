<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivCartImagen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/logo"/>

    <TextView
        android:id="@+id/tvCartCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
        android:fontFamily="@font/lilita_one_regular"
        android:textColor="@color/foodtec_naranja"
        android:textSize="18sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/ivCartImagen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvCartNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hamburguesa"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/tvCartCantidad"
        app:layout_constraintEnd_toStartOf="@+id/tvCartPrecio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvCartPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$40.00"
        android:fontFamily="@font/lilita_one_regular"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnCartRemove"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/btnCartRemove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/foodtec_naranja"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>