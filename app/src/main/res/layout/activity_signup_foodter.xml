<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foodtec_naranja"
    tools:context=".ui.SignupFoodterActivity"> <View
    android:id="@+id/viewTopSection"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/shape_top_blue_with_pattern"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHeight_percent="0.25" />

    <ImageButton
        android:id="@+id/btnRegresarSignup"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="@color/white"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="12dp"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@drawable/shape_home_card"
        android:elevation="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡ÚNETE A LOS FOODTERS!"
                android:fontFamily="@font/lilita_one_regular"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Gana dinero en tu tiempo libre entregando pedidos! Recibirás una comisión base (mín. $5.00) por cada pedido que entregues."
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Del 1 al 5, ¿qué tan amable eres?"
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <RatingBar
                android:id="@+id/rbAmabilidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Del 1 al 5, ¿qué tan fácil te es interactuar con los demás?"
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <RatingBar
                android:id="@+id/rbInteractuar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchPropinas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La propina es voluntaria y no es parte de tu comisión, ¿estás de acuerdo?"
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:textSize="16sp"
                android:checked="false"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etPorqueFoodter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="En 20 palabras, ¿por qué quisieras ser foodter?"
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:background="@drawable/shape_input_grey"
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnHabilitarme"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="¡QUIERO SER FOODTER!"
                android:fontFamily="@font/lilita_one_regular"
                android:textSize="18sp"
                app:cornerRadius="16dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>