<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foodtec_naranja"
    tools:context=".ui.HomeActivity">

    <View
        android:id="@+id/viewTopSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_top_blue_with_pattern"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.35" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:fontFamily="@font/lilita_one_regular"
        tools:text="Bienvenido, RENO"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@drawable/shape_home_card"
        android:elevation="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBienvenido"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvPregunta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Que se le antoja hacer?"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lilita_one_regular"
                android:layout_marginBottom="16dp"
                android:layout_gravity="start"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnOpcion1"
                    android:layout_width="0dp"
                    android:layout_height="120dp" android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/white"> <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/border_outline_comida"> <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_send" app:tint="@color/foodtec_naranja"/> <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ser Foodter"
                    android:fontFamily="@font/lilita_one_regular"
                    android:textColor="@color/foodtec_naranja"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnOpcion2"
                    android:layout_width="0dp"
                    android:layout_height="120dp" android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/white"> <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/border_outline_bebida"> <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_search" app:tint="@color/foodtec_azul"/> <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Objetos"
                    android:fontFamily="@font/lilita_one_regular"
                    android:textColor="@color/foodtec_azul"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <EditText
                android:id="@+id/etBuscador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="¿De qué tiene antojo hoy?"
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:background="@drawable/shape_input_grey"
                android:padding="16dp"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="12dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tvTituloComida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMIDA"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lilita_one_regular"
                android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tvTituloBebidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BEBIDAS"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lilita_one_regular"
                android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBebidas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginBottom="24dp"/>


            <TextView
                android:id="@+id/tvTituloSnacks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SNACKS"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lilita_one_regular"
                android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSnacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>