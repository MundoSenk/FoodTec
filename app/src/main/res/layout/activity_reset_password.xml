<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foodtec_naranja"
    tools:context=".ui.NewPasswordActivity">

    <!-- 1. Sección Superior con color de fondo y patrón -->
    <View
        android:id="@+id/viewTopSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_top_blue_with_pattern"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.35" />

    <!-- 2. Logo Flotante Centrado -->
    <ImageView
        android:id="@+id/imgLogoFlotante"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:elevation="10dp"
        android:contentDescription="Logo de la aplicación"
        app:layout_constraintBottom_toBottomOf="@+id/viewTopSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewTopSection" />

    <!-- 3. Tarjeta de Contenido Principal (ScrollView) -->
    <ScrollView
        android:id="@+id/scrollViewReset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/shape_white_card"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTopSection"
        android:layout_marginTop="-80dp"
        app:layout_constraintHeight_percent="0.7"> <!-- Aumento la altura un poco para los dos campos -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Título de la Acción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Define tu Nueva Contraseña"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lilita_one_regular"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal"/>

            <!-- Instrucciones -->
            <TextView
                android:id="@+id/tvInstruccionesReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escribe y confirma tu nueva contraseña. Debe ser segura y fácil de recordar."
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Campo de Nueva Contraseña -->
            <EditText
                android:id="@+id/etNuevaPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nueva Contraseña"
                android:fontFamily="@font/lilita_one_regular"
                android:textSize="20sp"
                android:gravity="start"
                android:inputType="textPassword"
                android:background="@drawable/shape_input_grey"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp"/>

            <!-- Campo de Confirmar Contraseña -->
            <EditText
                android:id="@+id/etConfirmarPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirmar Contraseña"
                android:fontFamily="@font/lilita_one_regular"
                android:textSize="20sp"
                android:gravity="start"
                android:inputType="textPassword"
                android:background="@drawable/shape_input_grey"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="32dp"/>

            <!-- Botón de Guardar Contraseña -->
            <Button
                android:id="@+id/btnGuardarPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GUARDAR NUEVA CONTRASEÑA"
                android:fontFamily="@font/lilita_one_regular"
                android:textSize="14sp"
                android:paddingVertical="12dp"
                android:background="@drawable/shape_tab_selected"
                android:textColor="@color/black"/>



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>